@{
    Layout="Shared/_Layout.cshtml";
}


<div class="well custom-well">
  <h3 class="text-center"><strong>Are you sure you want to delete all stylists?<br>
  All client and stylist information will be lost!</strong></h3>
  <p id='warning-emoji' class="text-center">⚠️</p>
</div>

<center class="under-well-btn">
  <form class='inline-form' action="/" method="post">
    <input type="hidden" name="_method" value="DELETE">
    <button type='submit' class="btn btn-danger">Yes, delete all stylists</button>
  </form>
  <a href="/"><span class="btn btn-primary">Return to home</span></a>
</center>
