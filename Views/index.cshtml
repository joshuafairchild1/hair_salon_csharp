@{
    Layout="Shared/_Layout.cshtml";
}

<div class="custom-well well">
  <h2 class="text-left">Stylists:</h2>
  <hr>
  @if(@Model.Count == 0)
  {
    <h3 class="text-center well-content">There are currently no stylists on the schedule.</h3>
  }
  else
  {
    @foreach(var stylist in Model)
    {
      <h3 class="well-content"><a href="/stylists/@stylist.GetId()">@stylist.GetName()</a></h3>
    }
  }
</div>

<center class="under-well-btn">
<form class="inline-form" action="/stylists/new" method="get">
  <button type='submit' class="btn btn-primary">Add stylist</button>
  <input type="hidden" name="form-type" value="stylist">
</form>
@if(Model.Count != 0)
{
  <a href="/stylists/delete" id="index-delete-btn"><span class="btn btn-danger">Delete all stylists</span></a>
}
</center>
