@{
    Layout="Shared/_Layout.cshtml";
}

<div class="row">
  <div class="col-sm-6 text-center">
    <h2 class="text-left">Stylists:</h2>
    @if(@Model.Count == 0)
    {
      <h3>There are currently no stylists on the schedule. Would you like to</h3>
    }
    else
    {
      @foreach(var stylist in Model)
      {
        <h3><a href="/stylists/@stylist.GetId()">@stylist.GetName()</a></h3>
      }
    }
  </div>
  <div class="col-sm-6">
    <form action="/stylist/new" method="get">
      <button type='button' class="btn btn-primary">Add Stylist</button>
      <input type="hidden" name="form-type" value="stylist">
    </form>
  </div>
</div>
