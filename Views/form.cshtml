@{
    Layout="Shared/_Layout.cshtml";
}

@if(Model["form-type"] == "stylist")
{
  <h3>New stylist</h3>
  <form action="/" method="post">
    <div class="form-group">
      <label for="stylist-name">Name:</label>
      <input type="text" name="stylist-name" class="form-control">
    </div>
    <div class="form-group">
      <label for="stylist-telephone">Telephone:</label>
      <input type="text" name="stylist-telephone" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary btn-block">Add new stylist</button>
  </form>
}
else if(Model["form-type"] == "client")
{
  <h3>New client</h3>
  <form action='/stylists/@Model["stylist"].GetId()/clients/new' method="post">
    <div class="form-group">
      <label for="client-name">Name:</label>
      <input type="text" name="client-name" class="form-control">
    </div>
    <div class="form-group">
      <label for="client-telephone">Telephone:</label>
      <input type="text" name="client-telephone" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary btn-block">Add new client</button>
  </form>
}
